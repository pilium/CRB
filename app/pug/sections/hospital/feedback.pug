section.feedback
	.panel.panel-breadcrumbs
		+breadcrumbs()
	article.panel
		h1.section-title Отзывы пациентов
		.form-wrap
			#form-container.expand
				#form-content.expand
					#form-head
						h3.pre Написать отзыв
					form(action="#" method="POST" name="feedback")
						p
							label(for="feedback-name") Ваше имя 
							input.input.name(name='feedback_name', placeholder='Ваше имя', type='text', id='feedback-name')
						p
							label(for="feedback-subject") Тема отзыва
							input.input.subject(name='feedback_subject', placeholder='Тема сообщения', type='text'. id='feedback-subject')
						p
							label(for="feedback-text") Текст отзыва
							textarea.input.message(placeholder='Ваше сообщение', name="feedback_text",  id="feedback-text")
						p
							input.input.submit(type='submit', value='Отправить сообщение')
		.feedback

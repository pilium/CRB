mixin organizationsItem(href, src, alt, text)
	.organizations-item
		a.organizations-item__link(href= href target="_blank")
			.organizations-item__icon-box
				img(src=`img/organizations/${src}.jpg`, alt= alt)
			p.organizations-item__content= text


mixin filesLink(href, icon, title, size, bigText)
	.file-link__wrap
		a.file(href= href target="_blank" rel="noopener noreferrer")
			span.file-icon
				+icon(icon)
			if(bigText)
				span.file-title.big-title= title
			else
				span.file-title= title
			if(size)
				span.file-size= size
			else
				span.file-size.link переход на другой сайт



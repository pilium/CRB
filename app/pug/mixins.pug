	.services-item
		a.services-item__link(href= href)
			.services-item__icon-box
				+icon(icon)
			p.services-item__title= title
			p.services-item__content= text

mixin newsItem(href, day, year, title, text)
	.post-module
		.thumbnail
			.date
				.day= day
				.month= year
			img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/169963/photo-1429043794791-eb8f26f44081.jpeg')
		.post-content
			.category Photos
			h1.title= title
			h2.sub_title The city that never sleeps.
			p.description= text
			.post-content__bottom
				button.btn.btn--card
					.circle
						span.icon.arrow
					p.button-text Перейти
				.post-meta
					svg.icon.icon-clock
						use(xlink:href="img/sprite/sprite.svg#clock")
					span.timestamp
						|  6мин назад



